{
  "swagger": "2.0",
  "info": {
    "version": "0.87",
    "title": "Convos API specification",
    "description": "This document describes the API for Convos, a multiuser persistent IRC proxy with web interface.",
    "contact": {
      "name": "Convos",
      "url": "https://github.com/Nordaaker/convos"
    },
    "license": {
      "name": "Artistic License version 2.0",
      "url": "http://opensource.org/licenses/Artistic-2.0"
    },
    "termsOfService": "SSL (HTTPS) is highly suggested, since login credentials and session cookies are transmitted over this API."
  },
  "host": "demo.convos.by",
  "basePath": "/1.0",
  "schemes": [ "http" ],
  "parameters": {
    "connection_id": {
      "name": "connection_id",
      "in": "path",
      "required": true,
      "type": "string",
      "description": "A friendly name of the server"
    },
    "conversation_id": {
      "name": "conversation_id",
      "in": "path",
      "default": "",
      "required": false,
      "type": "string",
      "description": "The name of the person/chat conversation"
    },
    "email": {
      "name": "ident",
      "in": "body",
      "required": true,
      "type": "string",
      "format": "email",
      "description": "User email"
    },
    "ident": {
      "name": "ident",
      "in": "path",
      "required": true,
      "type": "string",
      "description": "User email or server identity"
    },
    "protocol": {
      "name": "protocol",
      "in": "path",
      "required": true,
      "type": "string",
      "description": "The name of the connection protocol."
    },
    "session": {
      "name": "X-Convos-Session",
      "in": "header",
      "type": "string",
      "description": "TODO. Use cookies for now."
    }
  },
  "paths": {
    "/commands": {
      "get": {
        "tags": [ "chat" ],
        "summary": "Get list of available ommands.",
        "x-mojo-controller": "Convos::Controller::Chat",
        "operationId": "commandList",
        "parameters": [],
        "responses": {
          "200": {
            "description": "List of commands.",
            "schema": {
              "type": "object",
              "properties": {
                "commands": { "type": "array", "$ref": "#/definitions/Command" }
              }
            }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/connection/{protocol}/{connection_id}": {
      "delete": {
        "tags": [ "connection" ],
        "summary": "Delete a connection and all assosiated data.",
        "x-mojo-controller": "Convos::Controller::Connection",
        "operationId": "connectionDelete",
        "parameters": [
          { "$ref": "#/parameters/connection_id" },
          { "$ref": "#/parameters/protocol" },
          { "$ref": "#/parameters/session" }
        ],
        "responses": {
          "200": {
            "description": "Delete a connection.",
            "schema": {}
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      },
      "get": {
        "tags": [ "connection" ],
        "summary": "Get information about a connection.",
        "x-mojo-controller": "Convos::Controller::Connection",
        "operationId": "connection",
        "parameters": [
          { "$ref": "#/parameters/connection_id" },
          { "$ref": "#/parameters/protocol" },
          { "$ref": "#/parameters/session" }
        ],
        "responses": {
          "200": {
            "description": "A single connection.",
            "schema": {
              "$ref": "#/definitions/Connection"
            }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      },
      "post": {
        "tags": [ "connection" ],
        "summary": "Update a connection.",
        "x-mojo-controller": "Convos::Controller::Connection",
        "operationId": "connectionUpdate",
        "parameters": [
          { "$ref": "#/parameters/connection_id" },
          { "$ref": "#/parameters/protocol" },
          { "$ref": "#/parameters/session" },
          {
            "name": "data",
            "in": "body",
            "schema": { "$ref": "#/definitions/Connection" }
          }
        ],
        "responses": {
          "200": {
            "description": "Update a connection.",
            "schema": {}
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/connection/{protocol}/{connection_id}/rooms": {
      "get": {
        "tags": [ "conversation" ],
        "summary": "Get a list of all available chat rooms.",
        "x-mojo-controller": "Convos::Controller::Connection",
        "operationId": "connectionRooms",
        "parameters": [
          { "$ref": "#/parameters/connection_id" },
          { "$ref": "#/parameters/protocol" },
          { "$ref": "#/parameters/session" }
        ],
        "responses": {
          "200": {
            "description": "List of rooms.",
            "schema": {
              "type": "object",
              "properties": {
                "rooms": { "type": "array", "items": { "$ref": "#/definitions/Room" } }
              }
            }
          },
          "default": {
            "description": "Internal server error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/connection/{protocol}/{connection_id}/conversation/{conversation_id}": {
      "delete": {
        "tags": [ "conversation" ],
        "summary": "Remove (part) a conversation.",
        "x-mojo-controller": "Convos::Controller::Connection",
        "operationId": "conversationDelete",
        "parameters": [
          { "$ref": "#/parameters/connection_id" },
          { "$ref": "#/parameters/conversation_id" },
          { "$ref": "#/parameters/protocol" }
        ],
        "responses": {
          "200": {
            "description": "A conversation.",
            "schema": { "$ref": "#/definitions/Success" }
          },
          "default": {
            "description": "Internal server error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      },
      "post": {
        "tags": [ "conversation" ],
        "summary": "Join a conversation.",
        "x-mojo-controller": "Convos::Controller::Connection",
        "operationId": "conversationJoin",
        "parameters": [
          { "$ref": "#/parameters/connection_id" },
          { "$ref": "#/parameters/conversation_id" },
          { "$ref": "#/parameters/protocol" }
        ],
        "responses": {
          "200": {
            "description": "A conversation.",
            "schema": { "$ref": "#/definitions/Room" }
          },
          "default": {
            "description": "Internal server error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/connection/{protocol}/{connection_id}/conversation/{conversation_id}/messages": {
      "get": {
        "tags": [ "conversation" ],
        "summary": "Get a list of messages.\n\nNote: this resource require the user to be authenticated first.",
        "x-mojo-controller": "Convos::Controller::Chat",
        "operationId": "conversationMessages",
        "parameters": [
          { "$ref": "#/parameters/connection_id" },
          { "$ref": "#/parameters/conversation_id" },
          { "$ref": "#/parameters/protocol" },
          { "name": "after", "in": "query", "type": "string", "format": "datetime", "description": "Find messages after a given ISO 8601 timestamp" },
          { "name": "before", "in": "query", "type": "string", "format": "datetime", "description": "Find messages before a given ISO 8601 timestamp" },
          { "name": "level", "in": "query", "type": "string", "description": "debug, info (default), warn, error" },
          { "name": "limit", "in": "query", "type": "integer", "description": "Max number of messages to retrieve" },
          { "name": "match", "in": "query", "type": "string", "description": "Messages must match this string" }
        ],
        "responses": {
          "200": {
            "description": "List of messages.",
            "schema": {
              "type": "object",
              "properties": {
                "messages": { "type": "array", "items": { "$ref": "#/definitions/Message" } }
              }
            }
          },
          "default": {
            "description": "Internal server error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/connection/{protocol}/{connection_id}/conversation/{conversation_id}/send": {
      "post": {
        "tags": [ "chat" ],
        "summary": "Send a message to a target.",
        "x-mojo-controller": "Convos::Controller::Chat",
        "operationId": "conversationSend",
        "parameters": [
          { "$ref": "#/parameters/connection_id" },
          { "$ref": "#/parameters/conversation_id" },
          { "$ref": "#/parameters/protocol" },
          { "$ref": "#/parameters/session" }
        ],
        "responses": {
          "200": {
            "schema": { "$ref": "#/definitions/Command" }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/connections": {
      "get": {
        "tags": [ "connection" ],
        "summary": "Get all the connections for a user.",
        "x-mojo-controller": "Convos::Controller::Connection",
        "operationId": "connections",
        "parameters": [
          { "$ref": "#/parameters/session" }
        ],
        "responses": {
          "200": {
            "description": "List of connections.",
            "schema": {
              "type": "object",
              "properties": {
                "connections": { "type": "array", "items": { "$ref": "#/definitions/Connection" } }
              }
            }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      },
      "post": {
        "tags": [ "connection" ],
        "summary": "Add a connection.",
        "x-mojo-controller": "Convos::Controller::Connection",
        "operationId": "connectionAdd",
        "parameters": [
          { "$ref": "#/parameters/session" },
          {
            "name": "data",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "password": { "type": "string", "description": "Login password to server." },
                "protocol": { "type": "string", "description": "Protocol to use. Example: IRC." },
                "server": { "type": "string", "required": true, "description": "Either complete url or server:port. (Port is optional)" },
                "username": { "type": "string", "description": "Login username to server." }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Connection information.",
            "schema": {
              "$ref": "#/definitions/Connection"
            }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/conversations": {
      "get": {
        "tags": [ "conversation" ],
        "summary": "Get a list of all conversations.",
        "x-mojo-controller": "Convos::Controller::Chat",
        "operationId": "conversations",
        "parameters": [
          { "$ref": "#/parameters/session" }
        ],
        "responses": {
          "200": {
            "description": "List of messages.",
            "schema": {
              "type": "object",
              "properties": {
                "conversations": { "type": "array", "items": { "$ref": "#/definitions/Room" } }
              }
            }
          },
          "default": {
            "description": "Internal server error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/notifications": {
      "get": {
        "tags": [ "chat" ],
        "summary": "Get list of notications.",
        "description": "A notification is added once your name is mentioned in a chat or someone sends a direct message.",
        "x-mojo-controller": "Convos::Controller::Chat",
        "operationId": "notifications",
        "parameters": [
          { "$ref": "#/parameters/session" }
        ],
        "responses": {
          "200": {
            "description": "List of commands.",
            "schema": {
              "type": "object",
              "properties": {
                "notifications": { "type": "array", "items": { "$ref": "#/definitions/Notification" } }
              }
            }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/notifications/seen": {
      "post": {
        "tags": [ "chat" ],
        "summary": "Mark a notication as seen.",
        "description": "TODO: Notification count vs red/green toggling of a single notification.",
        "x-mojo-controller": "Convos::Controller::Chat",
        "operationId": "notificationSeen",
        "parameters": [
          { "$ref": "#/parameters/session" },
          {
            "name": "data",
            "in": "body",
            "type": "object",
            "properties": {
              "ids": { "type": "array", "type": "integer" }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of commands.",
            "schema": {
              "type": "object",
              "properties": {}
            }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/user": {
      "delete": {
        "tags": [ "user" ],
        "summary": "Delete a user.",
        "x-mojo-controller": "Convos::Controller::User",
        "operationId": "userDelete",
        "parameters": [
          { "$ref": "#/parameters/session" }
        ],
        "responses": {
            "200": {
            "description": "Successfully deleted.",
            "schema": { "$ref": "#/definitions/Success" }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      },
      "get": {
        "tags": [ "user" ],
        "summary": "Get user data.",
        "x-mojo-controller": "Convos::Controller::User",
        "operationId": "user",
        "parameters": [
          { "$ref": "#/parameters/session" }
        ],
        "responses": {
          "200": {
            "description": "User profile.",
            "schema": { "$ref": "#/definitions/User" }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      },
      "post": {
        "tags": [ "user" ],
        "summary": "Update an existing user.",
        "x-mojo-controller": "Convos::Controller::User",
        "operationId": "userSave",
        "parameters": [
          { "$ref": "#/parameters/session" },
          {
            "name": "data",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "avatar": { "type": "string", "description": "User avatar" },
                "password": { "type": "string", "description": "User password" }
              }
            }
          }
        ],
        "responses": {
            "200": {
            "description": "User profile.",
            "schema": { "$ref": "#/definitions/User" }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [ "user" ],
        "summary": "Log in a user based on email and password.",
        "x-mojo-controller": "Convos::Controller::User",
        "operationId": "userLogin",
        "parameters": [
          {
            "name": "data",
            "in": "body",
            "schema": {
              "type": "object",
              "required": true,
              "properties": {
                "email": { "type": "string", "format": "email", "required": true, "description": "User email" },
                "password": { "type": "string", "required": true, "description": "User password" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User profile.",
            "schema": { "$ref": "#/definitions/User" }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/user/logout": {
      "get": {
        "tags": [ "user" ],
        "summary": "Logout a user.",
        "description": "This resource will delete any sessions cookies that might be stored in the client.",
        "x-mojo-controller": "Convos::Controller::User",
        "operationId": "userLogout",
        "responses": {
          "200": {
            "description": "Successfully logged out.",
            "schema": { "$ref": "#/definitions/Success" }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    },
    "/user/register": {
      "post": {
        "tags": [ "user" ],
        "summary": "Register a new user.",
        "x-mojo-controller": "Convos::Controller::User",
        "operationId": "userRegister",
        "parameters": [
          {
            "name": "data",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "avatar": { "type": "string", "description": "User avatar" },
                "email": { "type": "string", "required": true, "format": "email", "description": "User email" },
                "password": { "type": "string", "required": true, "description": "User password" }
              }
            }
          }
        ],
        "responses": {
            "200": {
            "description": "User profile.",
            "schema": { "$ref": "#/definitions/User" }
          },
          "default": {
            "description": "Error.",
            "schema": { "$ref": "#/definitions/Error" }
          }
        }
      }
    }
  },
  "definitions": {
    "Command": {
      "required": [ "id", "command" ],
      "properties": {
        "id": { "type": "string" },
        "command": { "type": "string" }
      }
    },
    "Connection": {
      "required": [ "connection_id", "server", "nick" ],
      "properties": {
        "name": { "type": "string" },
        "path": { "type": "string" },
        "state": { "type": "string" },
        "url": { "type": "string" }
      }
    },
    "Room": {
      "properties": {
        "name": { "type": "string" },
        "path": { "type": "string" },
        "topic": { "type": "string" },
        "users": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the user"
            }
          }
        }
      }
    },
    "Error": {
      "required": [ "code", "message" ],
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "message": { "type": "string" },
            "path": { "type": "string" }
          }
        }
      }
    },
    "Message": {
      "required": [ "timestamp", "message" ],
      "properties": {
        "avatar": { "type": "string" },
        "level": { "type": "string" },
        "message": { "type": "string" },
        "sender": { "type": "string" },
        "timestamp": { "type": "string", "format": "datetime" }
      }
    },
    "Notification": {
      "required": [ "id", "timestamp", "message" ],
      "properties": {
        "id": { "type": "string" },
        "message": { "type": "string" },
        "timestamp": { "type": "string", "format": "datetime" }
      }
    },
    "Rel": {
      "required": [ "rel", "href" ],
      "properties": {
        "rel": { "type": "string" },
        "href": { "type": "string", "format": "url" }
      }
    },
    "Success": {
      "properties": {
        "message": { "type": "string" },
        "links": {
          "type": "array",
          "items": { "$ref": "#/definitions/Rel" }
        }
      }
    },
    "User": {
      "properties": {
        "email": { "type": "string" },
        "avatar": { "type": "string" },
        "registered": { "type": "integer" },
        "links": {
          "type": "array",
          "items": { "$ref": "#/definitions/Rel" }
        }
      }
    }
  }
}
